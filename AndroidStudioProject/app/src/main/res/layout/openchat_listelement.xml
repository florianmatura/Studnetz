<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listelementborder" >

    <ImageView
        android:id="@+id/openchat_profilepicture_imageView"
        android:layout_width="@dimen/profilepicture_list_size"
        android:layout_height="@dimen/profilepicture_list_size"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/openchat_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/openchat_profilepicture_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/openchat_latest_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="13dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/openchat_profilepicture_imageView"
        app:layout_constraintTop_toBottomOf="@+id/openchat_name_textview" />


    <TextView
        android:id="@+id/openchat_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="9dp"

        app:layout_constraintStart_toEndOf="@+id/openchat_profilepicture_imageView"
        app:layout_constraintTop_toBottomOf="@+id/openchat_latest_textview" />

    <ImageView
        android:id="@+id/notifyunread_imageview"
        android:layout_width="@dimen/notification_size"
        android:layout_height="@dimen/notification_size"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contact_button" />

</android.support.constraint.ConstraintLayout>